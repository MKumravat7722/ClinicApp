<h1>New Patient Registration</h1>

<%= form_with(model: @patient, url: receptionists_patients_path, method: :post) do |form| %>
  <!-- Form fields for patient registration -->
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="actions">
    <%= form.submit "Register" %>
  </div>
<% end %>
